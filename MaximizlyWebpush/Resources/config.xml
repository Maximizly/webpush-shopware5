            <name>maximizlyWebpushActive</name>
            <label lang="de">Aktiv</label>
            <label lang="en">Active</label>
            <value>1</value>
        </element>
        <element scope="shop" type="text">
            <name>maximizlyWebpushDomain</name>
            <label lang="de">Webpush Domain</label>
